<Window x:Class="GymApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymApp"
        mc:Ignorable="d"
        Title="Gym App" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="AliceBlue">
                <TextBlock Text="GYM APP" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="10">
                <Menu VerticalAlignment="Center" HorizontalAlignment="Right">
                    <MenuItem Header="Training" Click="TrainingMenu_Click" />
                    <MenuItem Header="Log Book" Click="LogBookMenu_Click" />
                    <MenuItem Header="Statistics" Click="StatisticsMenu_Click" />
                </Menu>
                </TextBlock>
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
