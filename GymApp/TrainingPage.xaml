<Page x:Class="GymApp.TrainingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainingPage">

    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="StartSessionButton" Content="Start Training Session" Click="StartSessionButton_Click" Margin="5"/>
            <TextBlock x:Name="TimerTextBlock" FontSize="24" Margin="5"/>
            <StackPanel x:Name="ExerciseSetsPanel" Visibility="Collapsed">
                <!-- dodawaj tu ćwiczenia -->
            </StackPanel>
            <Button x:Name="AddMoreSetsButton" Content="Add More Sets/Exercises" Click="AddMoreSetsButton_Click" Visibility="Collapsed" Margin="5"/>
            <Button x:Name="StopSessionButton" Content="Stop Session" Click="StopSessionButton_Click" Visibility="Collapsed" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
